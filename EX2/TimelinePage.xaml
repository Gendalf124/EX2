<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EX2.TimelinePage"
             Title="Хронология событий"
             BackgroundColor="#F8F9FA"> <Grid RowDefinitions="Auto, *" 
          Padding="20"
          RowSpacing="15">
        
        <Label Grid.Row="0" 
               Text="Ключевые даты в истории Белорецких заводов"
               FontSize="22"
               FontAttributes="Bold"
               TextColor="#2C5530"
               HorizontalOptions="Center" />

        <CollectionView Grid.Row="1"
                        x:Name="TimelineCollectionView"> <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"
                                   ItemSpacing="15" />
            </CollectionView.ItemsLayout>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeShape="RoundRectangle 10"
                            Padding="15"
                            Margin="0,0"
                            StrokeThickness="1"
                            Stroke="#E0E0E0"
                            BackgroundColor="White"> 
                        
                        <Grid ColumnDefinitions="70, *" 
                              RowDefinitions="Auto, Auto"
                              VerticalOptions="CenterAndExpand">
                            
                            <VerticalStackLayout Grid.Column="0" 
                                                 Grid.Row="0"
                                                 Grid.RowSpan="2"
                                                 Spacing="3"
                                                 VerticalOptions="Start">
                                <Label Text="{Binding Year}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#0F172A"
                                       HorizontalOptions="Center"/>
                                <BoxView HeightRequest="1" Color="#CCCCCC" HorizontalOptions="Fill"/>
                            </VerticalStackLayout>
                            
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   Text="{Binding Title}"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   TextColor="#2C5530" />
                            
                            <Label Grid.Column="1"
                                   Grid.Row="1"
                                   Text="{Binding Description}"
                                   FontSize="13"
                                   TextColor="#666666"
                                   LineBreakMode="WordWrap" />
                            
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>